<div class="panel panel-default devise-bs main-block">
  <div class="panel-heading text-center">
    <h4>Teams</h4>
  </div>
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Tournament</th>
          <th>Status</th>
          <th colspan="3" class="col-md-3">
            <%= link_to 'New Team', new_team_path %>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @teams.each do |team| %>
          <tr>
            <td><%= team.name %></td>
            <td><%= team.tournament %></td>
            <td><%= team.status.humanize.capitalize %></td>
            <td><%= link_to 'Show', team %></td>
            <td><%= link_to 'Edit', edit_team_path(team) %></td>
            <td><%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
