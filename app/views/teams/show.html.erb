<div class="panel panel-default devise-bs main-block">
  <div class="panel-heading text-center">
    <h4>Team</h4>
  </div>
  <div class="panel-body">
    <div class="col-md-6">
      <div class="col-md-12">
        <p>
          <strong>Name:</strong>
          <%= @team.name %>
        </p>
        <p>
          <strong>Tournament:</strong>
          <%= @team.tournament.name %>
        </p>
        <p>
          <strong>Status:</strong>
          <%= @team.status %>
        </p>
      </div>

      <div class="col-md-6">
        <%= form_with(model: @team, local: true, url: {action: :approve}) do |f| %>
          <%= f.submit 'Approve', class: 'btn btn-success btn-block' %>
        <% end %>
      </div>
      <div class="col-md-6">
        <%= form_with(model: @team, local: true, url: {action: :reject}) do |f| %>
          <%= f.submit 'Reject', class: 'btn btn-danger btn-block' %>
        <% end %>
      </div>

    </div>
    <div class="col-md-6">
      <p>
        <strong>Players:</strong>
        <% @team.team_players.each do |player| %>
          <br><%= player.user.email %>
        <% end %>
      </p>
    </div>

    <div class="pull-right">
      <%= link_to 'Edit', edit_team_path(@team) %> |
      <%= link_to 'Back', teams_path %>
    </div>
  </div>
</div>








