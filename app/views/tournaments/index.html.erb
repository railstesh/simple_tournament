<div class="panel panel-default devise-bs main-block">
  <div class="panel-heading text-center">
    <h4>Tournaments</h4>
  </div>
  <div class="panel-body">

    <div class="col-md-12">
      <%= form_tag(search_tournaments_path, method: :get, remote: true) do %>
        <div class="col-md-3">
          <%= submit_tag 'All', class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-md-3">
          <%= submit_tag 'Upcoming', class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-md-3">
          <%= submit_tag 'Running', class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-md-3">
          <%= submit_tag 'Finished', class: 'btn btn-primary btn-block' %>
        </div>
      <% end %>
    </div>
    <hr>

    <table class="table table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th colspan="3" class="col-md-3">
            <%= link_to 'New Tournament', new_tournament_path %>
          </th>
        </tr>
      </thead>
      <tbody>
        <%= render "index_table_body"%>
      </tbody>
    </table>
  </div>
</div>
